<body>
    <h1>Simple Music Player</h1>
    <div class="player">
        <audio id="audio" src="sample.mp3"></audio>
        <button onclick="playPause()">Play/Pause</button>
    </div>
    <script>
        function playPause() {
            var audio = document.getElementById('audio');
            if (audio.paused) {
                audio.play();
            } else {
                audio.pause();
            }
        }
    </script>
</body>
